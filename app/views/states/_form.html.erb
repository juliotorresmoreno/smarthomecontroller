<%= form_for(state) do |f| %>
  <% if state.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(state.errors.count, "error") %> prohibited this state from being saved:</h2>

      <ul>
      <% state.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="state_state_id">ID</label>
    <%= f.number_field :state_id, class:"form-control", readonly: "true" %>
  </div>

  <div class="field">
    <label for="state_name">Nombre</label>
    <%= f.text_field :name, class:"form-control" %>
  </div>

  <div class="field">
    <label for="state_country_id">Pais</label>
    <%= f.select :country_id, 
          options_from_collection_for_select(Country.all, :id, :name, state.country_id), {}, 
          {:class => "form-control"} %>
  </div>

  <div class="actions">
    <%= f.submit 'submit', :class => 'btn btn-success' %>
  </div>
<% end %>
