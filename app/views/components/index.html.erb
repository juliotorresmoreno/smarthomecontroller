<p id="notice"><%= notice %></p>

<h1>Components</h1>

<table class="table">
  <thead>
    <tr>
      <th>Module</th>
      
      <th>Name</th>
      <th>Creado</th>
      <th>Modificado</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @components.each do |component| %>
      <tr>
        <td><%= component.module_id %></td>
        <td><%= component.state %></td>
        <td><%= component.name %></td>
        <td><%= component.created_at %></td>
        <td><%= component.update_at %></td>
        
        <td><%= link_to 'Mostrar', component %></td>
        <td><%= link_to 'Editar', edit_component_path(component) %></td>
        <td><%= link_to 'Eliminar', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Component', new_component_path %>
