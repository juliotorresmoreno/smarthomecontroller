<%= form_for(schedule) do |f| %>
  <% if schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="schedule_schedule_id">ID</label>
    <%= f.number_field :schedule_id, class:"form-control", :readonly => 'readonly' %>
  </div>

  <div class="field">
    <label for="schedule_device_id">Dispositivo</label>
    <%= f.select :device_id, 
          options_from_collection_for_select(
            Location.where("user_id = #{current_user.id}"
          ), :id, :name, schedule.device_id), {}, 
          {:class => "form-control"} %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date, {}, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :time %>
    <%= f.time_select :time, {}, class:"form-control width-auto" %>
  </div>

  <div class="field">
    <%= f.label :repetition %>
    <%= f.number_field :repetition, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :interval %>
    <%= f.text_field :interval, class:"form-control" %>
  </div>


  <div class="actions">
    <%= f.submit 'submit', :class => 'btn btn-success' %>
  </div>
<% end %>
