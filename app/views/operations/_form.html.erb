<%= form_for(operation) do |f| %>
  <% if operation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(operation.errors.count, "error") %>
        prohibited this operation from being saved:
      </h2>
      <ul>
      <% operation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="accion_accion_id">ID</label>
    <%= f.number_field :accion_id, :class => "form-control", readonly: true %>
  </div>

  <div class="field">
    <label for="accion_name">Nombre</label>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="field">
    <label for="operation_module_id">Modulo</label>
    <%= f.select :module_id, 
          options_from_collection_for_select(
            Component.all, :id, :name, operation.module_id), {}, 
          {:class => "form-control"} %>
  </div>

  <div class="actions">
    <%= f.submit 'submit', :class => 'btn btn-success' %>
  </div>
<% end %>
