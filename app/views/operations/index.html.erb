<p id="notice"><%= notice %></p>

<h1>Operations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Operation</th>
      
      <th>Name</th>
      <th>Component</th>
      <th>Creado</th>
      <th>Modificado</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operations.each do |operation| %>
      <tr>
        <td><%= operation.operation_id %></td>
        <td><%= operation.state %></td>
        <td><%= operation.name %></td>
        <td><%= operation.component_id %></td>
        <td><%= operation.created_at %></td>
        <td><%= operation.update_at %></td>
        
        <td><%= link_to 'Mostrar', operation %></td>
        <td><%= link_to 'Editar', edit_operation_path(operation) %></td>
        <td><%= link_to 'Eliminar', operation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

