<p id="notice"><%= notice %></p>

<h1>Operations</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Modulo</th>
      <th>Creado</th>
      <th>Modificado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operations.each do |operation| %>
      <tr>
        <td><%= operation.accion_id %></td>
        <td><%= operation.name %></td>
        <td><%= operation.module_id %></td>
        <td><%= operation.created_at.in_time_zone("Bogota").strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= operation.update_at.in_time_zone("Bogota").strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Modificar', edit_operation_path(operation) %></td>
        <td><%= link_to 'Eliminar', operation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

