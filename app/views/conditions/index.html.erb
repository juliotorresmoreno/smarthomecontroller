<p id="notice"><%= notice %></p>

<h1>Conditions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Condition</th>
      <th>State</th>
      <th>Schedule</th>
      <th>Condition</th>
      <th>Condition type</th>
      <th>Created at</th>
      <th>Update at</th>
      <th>Delete at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conditions.each do |condition| %>
      <tr>
        <td><%= condition.condition_id %></td>
        <td><%= condition.state %></td>
        <td><%= condition.schedule_id %></td>
        <td><%= condition.condition %></td>
        <td><%= condition.condition_type %></td>
        <td><%= condition.created_at %></td>
        <td><%= condition.update_at %></td>
        <td><%= condition.delete_at %></td>
        <td><%= link_to 'Show', condition %></td>
        <td><%= link_to 'Edit', edit_condition_path(condition) %></td>
        <td><%= link_to 'Destroy', condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

