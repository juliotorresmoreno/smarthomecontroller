<%= form_for(city) do |f| %>
  <% if city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
      <% city.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="city_city_id">ID</label>
    <%= f.number_field :city_id, class:"form-control", :readonly => 'readonly' %>
  </div>

  <div class="field">
    <label for="city_name">Nombre</label>
    <%= f.text_field :name, class:"form-control" %>
  </div>

  <div class="field">
    <label for="city_state_id">Departamento</label>
      <%= f.select :state_id, 
            options_from_collection_for_select(State.all, :id, :name, city.state_id), {}, 
            {:class => "form-control"} %>
  </div>

  <div class="actions">
    <%= f.submit 'submit', :class => 'btn btn-success' %>
  </div>
<% end %>
