<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Location</th>
      
      <th>User</th>
      <th>Name</th>
      <th>Creado</th>
      <th>Modificado</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.location_id %></td>
        <td><%= location.state %></td>
        <td><%= location.user_id %></td>
        <td><%= location.name %></td>
        <td><%= location.created_at %></td>
        <td><%= location.update_at %></td>
        
        <td><%= link_to 'Mostrar', location %></td>
        <td><%= link_to 'Editar', edit_location_path(location) %></td>
        <td><%= link_to 'Eliminar', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

