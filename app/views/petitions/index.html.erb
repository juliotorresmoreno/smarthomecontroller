<p id="notice"><%= notice %></p>

<h1>Petitions</h1>

<table>
  <thead>
    <tr>
      <th>Petition</th>
      <th>State</th>
      <th>User</th>
      <th>Petition type</th>
      <th>Title</th>
      <th>Description</th>
      <th>Created at</th>
      <th>Update at</th>
      <th>Delete at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @petitions.each do |petition| %>
      <tr>
        <td><%= petition.petition_id %></td>
        <td><%= petition.state %></td>
        <td><%= petition.user_id %></td>
        <td><%= petition.petition_type_id %></td>
        <td><%= petition.title %></td>
        <td><%= petition.description %></td>
        <td><%= petition.created_at %></td>
        <td><%= petition.update_at %></td>
        <td><%= petition.delete_at %></td>
        <td><%= link_to 'Show', petition %></td>
        <td><%= link_to 'Edit', edit_petition_path(petition) %></td>
        <td><%= link_to 'Destroy', petition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

