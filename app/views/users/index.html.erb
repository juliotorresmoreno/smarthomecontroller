<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      
      <th>Nombre</th>
      <th>Lastname</th>
      <th>Fullname</th>
      <th>Email</th>
      <th>Password</th>
      <th>Perfil</th>
      <th>Creado</th>
      <th>Modificado</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_id %></td>
        
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.fullname %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.perfil_id %></td>
        <td><%= user.created_at %></td>
        <td><%= user.update_at %></td>
        
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

