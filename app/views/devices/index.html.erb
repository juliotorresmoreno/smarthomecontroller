<p id="notice"><%= notice %></p>

<h1>Devices</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>

      <th>Nombre</th>
      <th>Ubicacion</th>
      <th>UUID</th>
      <th>On/Off</th>
      <th>Creado</th>
      <th>Modificado</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.device_id %></td>

        <td><%= device.name %></td>
        <td><%= device.location.name %></td>
        <td><%= device.UUID %></td>
        <td><%= device.state_onoff %></td>
        <td><%= device.created_at.in_time_zone("Bogota").strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= device.update_at.in_time_zone("Bogota").strftime("%Y-%m-%d %H:%M") %></td>
        
        <td><%= link_to 'Editar', edit_device_path(device) %></td>
        <td><%= link_to 'Eliminar', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo dispositivo', new_device_path %>
