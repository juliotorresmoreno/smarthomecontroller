<p id="notice"><%= notice %></p>

<h1>Devices</h1>

<table class="table">
  <thead>
    <tr>
      <th>Device</th>
      <th>State</th>
      <th>Location</th>
      <th>Uuid</th>
      <th>State onoff</th>
      <th>Created at</th>
      <th>Update at</th>
      <th>Delete at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.device_id %></td>
        <td><%= device.state %></td>
        <td><%= device.location_id %></td>
        <td><%= device.UUID %></td>
        <td><%= device.state_onoff %></td>
        <td><%= device.created_at %></td>
        <td><%= device.update_at %></td>
        <td><%= device.delete_at %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

